#include<iostream>
#include<array>
using namespace std;

int main()
{
    array<float, 3> score;
    cout << "Enter your first score: "<< endl;
    cin >> score[0];
    cout << "Enter your second score: "<< endl;
    cin >> score[1];
    cout << "Enter your third score: "<< endl;
    cin >> score[2];
    
    double avg = (score[0] + score[1] + score[2]) / 3.0;
    cout << "Your score is " << endl <<
         score[0] << endl <<
         score[1] << endl <<
         score[2] << endl <<
    "avg: " << avg << endl;    
}
