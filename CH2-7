#include<iostream>
using namespace std;
int time(int hours, int minutes);
int main()
{
    cout << "Enter the number of hours: ";
    int hours;
    cin >> hours;
    
    cout << "Enter the number of minutes: ";
    int minutes;
    cin >> minutes;
    time(hours, minutes);
    return 0;
}

int  time(int hours, int minutes)
{
    cout << "Time: " << hours << ":" << minutes << endl;
    return 0;
}
